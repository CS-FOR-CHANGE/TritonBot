{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src",
        "baseUrl": ".",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": ["node_modules/@types"],
        "sourceMap": false,
        "paths": {
            "bot": ["./src/bot.ts"],
            "commands/*": ["./src/commands/*"],
            "events/*": ["./src/events/*"],
            "types/*": ["./src/types/*"],
            "utils/*": ["./src/utils/*"]
        },
    },
    
    "files": ["src/bot.ts"],
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
